{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
        <h1 class="text-2xl font-bold text-center text-blue-600 mb-6">Iniciar sesión</h1>

        {% if error %}
            <div class="bg-red-100 text-red-800 px-4 py-3 rounded mb-4 text-sm">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {{ form_start(loginForm) }}
            <div class="mb-4">
                {{ form_label(loginForm.email, 'Correo electrónico', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(loginForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(loginForm.password, 'Contraseña', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(loginForm.password, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition">
                Iniciar sesión
            </button>
        {{ form_end(loginForm) }}

        <div class="mt-6 text-center text-sm text-gray-600">
            <p>No tienes cuenta aún?</p>
            <a href="{{ path('app_register') }}" class="mt-2 inline-block text-blue-600 hover:underline font-medium">
                Registrarse
            </a>
        </div>
    </div>
</div>
{% endblock %}
