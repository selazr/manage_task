{% extends 'base.html.twig' %}

{% block title %}Nova Tasca{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0">Crear Nova Tasca</h2>
        </div>

        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.title, 'Títol', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.content, 'Contingut', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                {{ form_errors(form.content) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.priority, 'Prioritat', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.priority, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.priority) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.hours, 'Hores estimades', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.hours, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.hours) }}
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="{{ path('app_home') }}" class="btn btn-secondary">Cancel·lar</a>
                <button type="submit" class="btn btn-success">➕ Crear Tasca</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
